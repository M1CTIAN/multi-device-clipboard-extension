{
    "manifest_version": 3,
    "name": "Multi-Device Clipboard",
    "version": "1.0",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "clipboardRead",
        "clipboardWrite",
        "identity"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "oauth2": {
        "client_id": "34872421436-29srao2q80oe3981dve7gcu2jn4d4es8.apps.googleusercontent.com",
        "scopes": [
            "openid",
            "email",
            "profile"
        ]
    }
}