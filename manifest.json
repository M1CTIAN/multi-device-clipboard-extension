{
    "manifest_version": 3,
    "name": "Multi-Device Clipboard",
    "version": "1.0",
    "description": "Sync clipboard content across devices.",
    "permissions": [
        "storage",
        "tabs",
        "clipboardRead",
        "notifications"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: https://api.qrserver.com;"
    }
}